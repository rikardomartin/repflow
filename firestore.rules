rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra global de desenvolvimento (LEITURA/ESCRITA LIBERADA)
    // TODO: Alterar para regras mais restritas antes de publicar
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras espec√≠ficas (exemplo para futuro)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
